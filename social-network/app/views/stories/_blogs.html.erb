<table>
            <tr>
              <th>
                User_id
              </th>
              <th>
                Blog_name
              </th>
              <th>
                Blog_description
              </th>
              <th colspan="2" style="text-align:center">Action
              </th>
            </tr>
            <% @stories.each do |u| %>
              <tr>
                   <td>
                      <%=u.user_id %>
                   </td>  
                   <td>
                     <%=u.blog_name %>
                   </td>
                   <td>
                     <%=u.blog_description %>
                   </td>
                   <td>
                     <% if session[:username].present? %>
                        <%= link_to 'Comment', "/cmnt/#{u.id}" %>
                      <% else %>
                        <%= link_to 'Login', "/login" %>
                      <% end %>
                   </td>
                   <td><%= link_to 'Delete', "/dlt/#{u.id}"  ,method: :delete ,data: { confirm: 'Are you sure?',remote: true}  %>
                   </td>
              </tr>
            <% end %>
</table>
