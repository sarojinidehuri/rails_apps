<!DOCTYPE html>
<html>
<head>
	<title>order details</title>
  	<style>
        body {
        width: 93%;
        height: 100%;
        background-image: url(assets/2.blur.jpg);
        background-size: cover;
        padding: 40px;
        font-family: "Open Sans Condensed", sans-serif;
        text-align: center;
      }

      .bg {
        position: fixed;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        margin-top: 142px;   
      }

      .form {
        position: relative;
        width: 739px;
        margin: 0 auto;
        background: rgba(130,130,130,.3);
        padding: 20px 22px;
        border: 1px solid;
        border-top-color: rgba(255,255,255,.4);
        border-left-color: rgba(255,255,255,.4);
        border-bottom-color: rgba(60,60,60,.4);
        border-right-color: rgba(60,60,60,.4);
      }
       table, th,td{
          border: 1px solid rgba(130,130,130,.3);
          padding: 12px;
          border-collapse: collapse;
            }
      
    </style>
    <script type="text/javascript">
      $("#heading").html("Orders page...");
    </script>
  </head>
<body>
	<div class="bg">
            <div class="form">
	             <table class="tb">
	             	  <tr>
                 		 <th>
                  			  User_id
                 		 </th>
		                  <th>
		                    Order_name
		                  </th>
		                  <th>
		                    Name
		                  </th>
		                  </th>
				             <th colspan="2" style="text-align:center">Action
				           </th>
                <% @orders.each do |u| %>
                  <tr>
                       <td>
                          <%=u.user_id%>
                       </td>  
                       <td>
                         <%=u.order_name%>
                       </td>
                       <td><%=u.user.name%></td>
                       <td><%= link_to 'Edit', "/edit/#{u.id}" %></td>
                       <td><%= link_to 'Delete', "/delete/#{u.id}" ,method: :destroy ,data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
	             </table>
          </div>
    </div>
</body>
</html>